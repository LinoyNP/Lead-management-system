<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login and Reset</title>
    <link rel="stylesheet" href="/public/css/login.css">
</head>
<body>
    <div class="container">
        <!-- Login Form -->
        <div id="login-form">
            <h2>Welcome Back!</h2>
            <form id="login">
                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    <span id="email-error" class="error-message"></span>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    <span id="password-error" class="error-message"></span>
                </div>

                <button type="submit">Log in</button>
            </form>
            <a id="forgot-password" href="#">Forgot Password?</a>
            <br>
            <!-- <a id="register-link" href="signUp.ejs">Don't have an account? Sign up</a> -->
            <a id="register-link" href="/re-register">Don't have an account? Sign up</a>


        </div>

        <!-- Reset Password Form -->
        <div id="reset-password-form" class="hidden">
            <h2>Reset Your Password</h2>
            <form id="reset-password">
                <div class="form-group">
                    <input type="email" id="reset-email" name="reset-email" placeholder="Enter your email" required>
                    <span id="reset-email-error" class="error-message"></span>
                </div>

                <button type="submit">Send Reset Link</button>
            </form>
        </div>

        <!-- Set New Password Form -->
        <div id="set-new-password-form" class="hidden">
            <h2>Set New Password</h2>
            <form id="set-new-password">
                <div class="form-group">
                    <input type="password" id="new-password" name="new-password" placeholder="Enter a new password" required>
                </div>

                <div class="form-group">
                    <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm your new password" required>
                    <span id="new-password-error" class="error-message"></span>
                </div>

                <button type="submit">Set Password</button>
            </form>
        </div>
    </div>

    <script src="/js/login.js"></script>
</body>
</html>
