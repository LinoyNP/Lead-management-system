<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login and Reset</title>
    <link rel="stylesheet" href="/css/styleLogin.css">
</head>
<body>
    <div class="container">
        <!-- Login Form -->
        <div id="login-form">
            <h2>Welcome Back!</h2>
            <form id="login">
                <!-- <form id="login" action="/api/login" method="POST"> -->

                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    <span id="email-error" class="error-message"></span>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    <span id="password-error" class="error-message"></span>
                </div>

                <button type="submit">Log in</button>
            </form>
            <a id="forgot-password" href="/reset-password">Forgot Password?</a>
            <br>
            <!-- <a id="register-link" href="signUp.ejs">Don't have an account? Sign up</a> -->
            <a id="register-link" href="/register">Don't have an account? Sign up</a>
        </div>
    </div>

    <script src="./js/login.js"></script>
</body>
</html>
