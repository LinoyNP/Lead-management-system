<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Agent Registration and Login</title>
  <link rel="stylesheet" href="/css/styleSignUp.css">


</head>
<body>
  <div class="container">
    <!-- Registration Form -->
    <div id="registration-form">
      <h2>Sign Up</h2>
      <form id="signup-form">
        <input type="text" id="full-name" placeholder="Full Name" required>
        <input type="email" id="email" placeholder="Email" required>
        <input type="password" id="password" placeholder="Your New Password" required>
        <input type="password" id="Initial_password" placeholder="Initial Password for Verification" required>
        <button type="submit">Sign up</button>
        <p id="signup-error"></p>
      </form>
      <!-- <a id="login-link" href="login.ejs">Already have an account? Log in</a> -->
      <a id="login-link" href="/login">Already have an account? Log in</a>

    </div>

  </div>
  <script src="./js/register.js"></script>

</body>
</html>
